{
  "name": "exploradores-api",
  "version": "1.0.0",
  "description": "Microservicio de Exploradores",
  "main": "dist/src/index.js",
  "scripts": {
    "dev": "prisma generate --schema=./prisma/schema.prisma && dotenv -e .env -- ts-node-dev -r tsconfig-paths/register --respawn --transpile-only src/index.ts",
    "build": "prisma generate --schema=./prisma/schema.prisma && tsc",
    "start": "node dist/src/index.js",
    "start:prod": "NODE_ENV=production node dist/src/index.js",
    "prisma:generate": "prisma generate --schema=./prisma/schema.prisma",
    "prisma:migrate": "prisma migrate dev",
    "prisma:studio": "prisma studio --browser none",
    "seed": "dotenv -e .env -- ts-node seeders/seed.ts",
    "manuales:schema": "ts-node seeders/manuales.schema.ts",
    "manuales:import": "dotenv -e .env -- ts-node seeders/manuales.import.ts"
  },
  "author": "Andolon-M",
  "license": "ISC",
  "dependencies": {
    "@prisma/adapter-mariadb": "^7.3.0",
    "@prisma/client": "^7.3.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "express-validator": "^7.2.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-dist": "^4.18.3",
    "swagger-ui-express": "^4.6.3"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.15",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.0",
    "@types/node": "^20.9.0",
    "@types/swagger-jsdoc": "^6.0.2",
    "@types/swagger-ui-express": "^4.1.8",
    "dotenv-cli": "^8.0.0",
    "prisma": "^7.3.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.3"
  }
}
